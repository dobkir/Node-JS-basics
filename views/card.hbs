<h1>Card</h1>

{{#if courses.length}}
<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Quantity</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>

    {{#each courses}}
    <tr>
      <td>{{title}}</td>
      <td>{{count}}</td>
      <td>
        <button class="btn btn-small">Remove item</button>
      </td>
    </tr>
    {{/each}}

  </tbody>

</table>

<p><strong>Price:</strong><span class="price">{{price}}</span></p>
{{else}}
<p>Your card is empty</p>
{{/if}}